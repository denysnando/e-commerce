
<div class="container main-container">
  <div class="row">
    <div class="col-lg-3 col-md-3 col-sm-12">
      <div class="col-lg-12 col-md-12 col-sm-6">
        <div class="no-padding">
          <span class="title">Minha Conta</span>
        </div>
        <div class="list-group list-categ">
          <%=link_to('Pedidos em Abertos', purchase_orders_path(status: :Aberto), :class=> "list-group-item")%>
          <%=link_to('Pedidos Finalizados', purchase_orders_path(status: :Entregue), :class=> "list-group-item")%>
          <%=link_to('Todos Pedidos', purchase_orders_path, :class=> "list-group-item")%>
        </div>
      </div>

    </div>

    <div class="clearfix visible-sm"></div>

    <!-- Cart -->
    <div class="col-lg-9 col-md-9 col-sm-12">
      <div class="col-lg-12 col-sm-12">
        <span class="title">Meus Pedidos</span>
      </div>
      <div class="col-lg-12 col-sm-12 hero-feature">
        <table class="table table-bordered tbl-cart">
          <thead>
            <tr>
              <td class="hidden-xs">NÃºmero do Pedido</td>
              <td>Data do Pedido</td>
              <td>Valor</td>
              <td>Status</td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <% @purchase_orders.each do |purchase|%>
            <tr>
              <td>
                <%= purchase.id %>
              </td>
              <td>
                <%=  purchase.created_at.strftime("%d-%m-%Y %H:%M") %>
              </td>
              <td>
                <%= number_to_currency(purchase.total_price) %>
              </td>
              <td>
                <%= purchase.status %>
              </td>
              <td>
                <%= link_to 'Visualizar', purchase_order_path(purchase) %>
              </td>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
    <!-- End Cart -->
  </div>
</div>
